<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="JavaFx4.GreetingController">

    <Label text="როგორი მისალოცი ბარათი გინდა?" style="-fx-font-size: 16px;"/>

    <CheckBox fx:id="balloonsCheck" text="Balloons"/>
    <CheckBox fx:id="heartsCheck" text="Hearts"/>
    <CheckBox fx:id="starsCheck" text="Stars"/>

    <Button text="Generate" onAction="#generateCard"/>

    <FlowPane fx:id="cardPane" hgap="10" vgap="10" prefHeight="200" prefWidth="350"/>
</VBox>
