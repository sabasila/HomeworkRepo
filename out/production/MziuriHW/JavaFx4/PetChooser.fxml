<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFx4.PetController">
    <ToggleGroup fx:id="petGroup"/>

    <Label text="აირჩიე შინაური ცხოველი:"/>

    <RadioButton fx:id="catRadio" text="კატა" toggleGroup="#petGroup"/>
    <RadioButton fx:id="dogRadio" text="ძაღლი" toggleGroup="#petGroup"/>
    <RadioButton fx:id="bunnyRadio" text="კურდღელი" toggleGroup="#petGroup"/>
    <RadioButton fx:id="birdRadio" text="ჩიტი" toggleGroup="#petGroup"/>

    <TextField fx:id="nameField" promptText="მაგ: bunny"/>
    <Button text="დაადასტურე" onAction="#onConfirm"/>
    <Label fx:id="resultLabel"/>
</VBox>
