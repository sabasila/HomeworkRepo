<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="JavaFx4.GalleryController" alignment="CENTER" spacing="20">

    <ImageView fx:id="imageView" fitHeight="300" fitWidth="400" preserveRatio="true"/>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="prevButton" text="წინა" onAction="#onPrev"/>
        <Button fx:id="nextButton" text="შემდეგი" onAction="#onNext"/>
    </HBox>
</VBox>
